<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .alignLeft {
            float: left;
        }

        .emptyBorder {
            margin: 6px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="440px" height="200px" addStyleNames="{style.emptyBorder}">
        <g:north size="20">
            <g:Label ui:field="textAreaLabel" addStyleNames="{style.alignLeft}"/>
        </g:north>
        <g:center>
            <g:TextArea ui:field="value" debugId="value-text-area" width="428px"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
