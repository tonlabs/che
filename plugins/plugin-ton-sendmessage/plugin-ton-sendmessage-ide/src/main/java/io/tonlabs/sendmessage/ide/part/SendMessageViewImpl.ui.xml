<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:che="urn:import:org.eclipse.che.ide.ui.listbox">
    <ui:style>
        .rootLayout {
            margin: 1em;
        }
    </ui:style>
    <g:DockLayoutPanel unit="EM" width="100%" height="100%" addStyleNames="{style.rootLayout}">
        <g:north size="5">
            <g:VerticalPanel width="100%">
                <g:Label>Function</g:Label>
                <che:CustomComboBox width="100%" ui:field="functionControl"/>
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <c:CellTable ui:field="parametersControl"/>
        </g:center>
        <g:south size="5">
            <g:Button text="Send Message"/>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>