<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:che='urn:import:org.eclipse.che.ide.ui.listbox'>

    <ui:style>
        .rootLayout {
            margin: 1em;
        }
    </ui:style>
    <g:DockLayoutPanel unit='EM' addStyleDependentNames="{style.rootLayout}">
        <g:north size='5'>
            <g:VerticalPanel>
                <g:Label>Function</g:Label>
                <che:CustomComboBox ui:field="functionControl" />
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <c:CellTable ui:field="parametersControl" />
        </g:center>
        <g:south size="5">
            <g:Button text="Send Message" />
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>