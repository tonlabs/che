<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:che="urn:import:org.eclipse.che.ide.ui.listbox">
    <ui:style>
        .rootLayout {
            padding: 10px;
        }

        .inputsControl {
            margin-bottom: 10px;
        }
    </ui:style>
    <g:VerticalPanel width="100%" addStyleNames="{style.rootLayout}">
        <g:Label>Function</g:Label>
        <che:CustomComboBox width="100%" ui:field="functionControl"/>
        <g:Label>Inputs</g:Label>
        <c:CellTable ui:field="inputsControl" addStyleNames="{style.inputsControl}"/>
        <g:Button text="Send Message"/>
    </g:VerticalPanel>
</ui:UiBinder>