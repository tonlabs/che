<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .rootLayout {
            padding: 10px;
        }

        .inputsControl {
            margin-bottom: 10px;
        }

        .header {
            margin-top: 10px;
        }

        .run {
            margin-bottom: 20px;
        }

        .resultTextArea {
            padding-right: 10px;
        }
    </ui:style>
    <g:VerticalPanel width="100%" addStyleNames="{style.rootLayout}">
        <g:Label>Compiled Contract File</g:Label>
        <g:ListBox width="100%" ui:field="tvcFileControl" visibleItemCount="1"
            title="Compiled TON contract (*.tvc) file name"/>
        <g:Label addStyleNames="{style.header}">ABI File</g:Label>
        <g:ListBox width="100%" ui:field="abiFileControl" visibleItemCount="1"
            title="ABI (*.abi) file name"/>
        <g:Label addStyleNames="{style.header}">Function</g:Label>
        <g:ListBox width="100%" ui:field="functionControl" visibleItemCount="1"/>
        <g:Label ui:field="inputsHeader" addStyleNames="{style.header}">Inputs</g:Label>
        <g:Grid ui:field="inputsControl" addStyleNames="{style.inputsControl}"/>
        <g:Button ui:field="runButton" enabled="false" text="Run Contract"
            addStyleNames="{style.run}"/>
        <g:ScrollPanel width="100%">
            <g:TextArea width="100%" readOnly="true" ui:field="output" debugId="run-contract-output"
                addStyleNames="{style.resultTextArea}"/>
        </g:ScrollPanel>
    </g:VerticalPanel>
</ui:UiBinder>
